<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconfont_tagfill"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12px"
            android:text="超实惠"
            android:textColor="#ff4f64"
            android:textSize="30px"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eee"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="350px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_offer2_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:paddingLeft="40px"
                android:text="智能云电视"
                android:textColor="#333"
                android:textSize="26px"/>

            <TextView
                android:text="这里是介绍"
                android:id="@+id/tv_offer2_des1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="24px"
                android:paddingLeft="40px"
                android:textSize="22px"
                android:textColor="#999"/>

            <ImageView
                android:id="@+id/iv_offer2_pic1"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:src="@drawable/sample2"/>
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#eee"
            />

        <LinearLayout
            android:layout_width="400px"
            android:layout_height="300px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="400px"
                android:layout_height="150px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200px"
                    android:layout_height="150px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20px"
                        android:textColor="#333"
                        android:textSize="26px"
                        android:paddingLeft="30px"
                        android:id="@+id/tv_offer2_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="经典VCR"/>

                    <TextView
                        android:layout_marginTop="30px"
                        android:paddingLeft="30px"
                        android:id="@+id/tv_offer2_des2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="经典VCR"
                        android:textSize="22px"
                        android:textColor="#999"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_offer2_pic2"
                    android:layout_width="200px"
                    android:layout_height="150px"
                    android:src="@drawable/sample2"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee"
                />

            <LinearLayout
                android:layout_width="400px"
                android:layout_height="150px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200px"
                    android:layout_height="150px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20px"
                        android:textColor="#333"
                        android:textSize="26px"
                        android:paddingLeft="30px"
                        android:id="@+id/tv_offer2_title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="经典VCR"/>

                    <TextView
                        android:layout_marginTop="30px"
                        android:paddingLeft="30px"
                        android:id="@+id/tv_offer2_des3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="经典VCR"
                        android:textSize="22px"
                        android:textColor="#999"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_offer2_pic3"
                    android:layout_width="200px"
                    android:layout_height="150px"
                    android:src="@drawable/sample2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eee"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#F3F3F3"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="#eee"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:src="@drawable/iconfont_likefill"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12px"
            android:text="猜你喜欢"
            android:textColor="#E67413"
            android:textSize="30px"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="#eee"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F3">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="120px"/>
</LinearLayout>